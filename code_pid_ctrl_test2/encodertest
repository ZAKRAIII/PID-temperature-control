ISR(PCINT0_vect){
  //Push button was pressed!
  if (digitalRead(butt_sel)){
    button_pressed = true;
  }
  //We navigate through the 4 menus with each button pressed
  else if(button_pressed == true){
    if(menu==4){
      menu = 0;
      PID_values_fixed=1;
      button_pressed= false;
      delay(1000);
    }
    if(menu==3){
      menu++;
      button_pressed= false;
      kd = kd + 1;
      delay(1000);
    }
    if(menu==2){
      menu++;
      button_pressed= false;
      ki = ki + 1;
      delay(1000);
    }
    if(menu==1){
      menu++;
      button_pressed= false;
      kp = kp + 1;
      delay(1000);
    }
    if(menu==0 && PID_values_fixed != 1){
      menu++;
      button_pressed= false;
      set_temperature = set_temperature+1;
      delay(1000);
    }
    PID_values_fixed = 0;
  }
}
